.wrapper
  = render partial: 'shared/side_bar'
  .chat-main
    .main-header
      .main-header__left-box
        .main-header__left-box__current-group
          = @group.name
        .main-header__left-box__member-list
          Memberï¼š
          .main-header__left-box__member-list__member
            - @group.group_users.each do |group_user|
              = group_user.user.name
      = link_to edit_group_path(@group),class: "main-header__edit-btn" do
        Edit
    .messages
      = render @messages
    .form.clearfix
      = form_for [@group, @message] do |f|
        .form.new_message.clearfix
          .input-box
            = f.text_field :content,class: 'input-box__text', placeholder: 'type a message'
            = f.label :image, class: 'input-box__image' do
              = fa_icon 'image',class:'input-box__image--bigger-icon'
              = f.file_field :image, class: 'input-box__image__file'
          = f.submit 'Send', class: 'submit-btn'
