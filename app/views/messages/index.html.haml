.flash-box
  .notice
    グループを作成しました
.wrapper
  .chat-side
    .side-header
      .side-header__box
        .side-header__box__user-name
          take
        .side-header__box__menu
          = link_to "#",class: "side-header__box__menu__link" do
            = fa_icon 'edit'
          = link_to "#",class: "side-header__box__menu__link" do
            = fa_icon 'cog'
    .groups
      = render partial: 'group'
      = render partial: 'group'
      = render partial: 'group'
  .chat-main
    .main-header
      .main-header__left-box
        .main-header__left-box__current-group
          takegroup
        .main-header__left-box__member-list
          Member：
          .main-header__left-box__member-list__member
            take
      = link_to "#",class: "main-header__edit-btn" do
        Edit
    .messages
      = render partial: 'message'
      = render partial: 'message'
      = render partial: 'message'
    .form.clearfix
      %form.new_message.clearfix
        .input-box
          %input.input-box__text{placeholder:'type a message',type:'text'}
          %label.input-box__image
            = fa_icon 'image',class:'input-box__image--bigger-icon'
            %input.input-box__image__file{type:'file'}
        %input.submit-btn{type:'submit',value:'Send'}




